{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
